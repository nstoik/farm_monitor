// For format details, see https://aka.ms/vscode-remote/devcontainer.json or the definition README at
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/python-3
{
	"name": "FM DATABASE",
	"context": "..",

	// The order of the files is important since later files override previous ones
	"dockerComposeFile": [
		"../docker-compose.yml",
		"dev.docker-compose.yml"
	],

	"remoteUser": "fm",
	"service": "fm_database",
	"workspaceFolder": "/workspaces/fm_database",
	"shutdownAction": "stopCompose",


	// Uncomment the next line to use a non-root user. See https://aka.ms/vscode-remote/containers/non-root-user.
	"runArgs": [ "-u", "fm" ],

	"extensions": [
		"ms-python.python",
		"eamodio.gitlens",
	],
	"settings": {
		"python.linting.enabled": true,
		"python.linting.pylintEnabled": true,
		"python.linting.pylintArgs": [
			"--load-plugins",
		],
		"python.linting.flake8Enabled": true,
		"python.linting.mypyEnabled": true,
		"python.formatting.provider": "black"
		
	},
}
